<Window x:Class="Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="720" KeyDown="Window_KeyDown" >
    <Grid Background="#FFE7F4FF">
        <Label x:Name="Timer" Content="Timer" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Canvas Name="gameGrid" HorizontalAlignment="Left" Height="391" Margin="55,30,0,0" VerticalAlignment="Top" Width="322"/>
        <Label x:Name="banniere" Content="" FontSize="200" Margin="540,365,4,18.5" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="11.639"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFE800" Offset="0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

        <TextBlock x:Name="Termine" HorizontalAlignment="Left" Margin="581,15,0,0" TextWrapping="Wrap" Text="Partie en cours" VerticalAlignment="Top" Height="21" Width="96"/>
        <TextBox x:Name="NomScore" HorizontalAlignment="Left" Height="23" Margin="581,66,0,0" TextWrapping="Wrap" Text="Anonymus" VerticalAlignment="Top" Width="96"/>
        <Label x:Name="label" Content="Entrez içi votre nom : " HorizontalAlignment="Left" Margin="451,63,0,0" VerticalAlignment="Top"/>

        <TextBlock x:Name="select" HorizontalAlignment="Left" Margin="428,119,0,0" TextWrapping="Wrap" Text="Selectionner le niveau : " VerticalAlignment="Top" Height="38" Width="216" FontSize="18.667"/>
        <Button x:Name="play" Content="PLAY ! " HorizontalAlignment="Left" Margin="428,243,0,0" VerticalAlignment="Top" Width="110" Height="34" FontSize="18.667" Click="play_Click"/>
        <RadioButton x:Name="level1" Content="Niveau 1 " HorizontalAlignment="Left" Margin="453,157,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="lvl"/>
        <RadioButton x:Name="level2" Content="Niveau 2" HorizontalAlignment="Left" Margin="453,182,0,0" VerticalAlignment="Top" GroupName="lvl"/>


    </Grid>
</Window>
